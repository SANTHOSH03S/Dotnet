@model mvc.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
}

<h2>Delete Employee</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.EmpName</dd>
        <dt>Phone</dt>
        <dd>@Model.EmpPhone</dd>
        <dt>Department</dt>
        <dd>@Model.EmpDept</dd>
        <dt>Number</dt>
        <dd>@Model.Number</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Employee", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "ViewEmployee", new { @class = "btn btn-secondary" })
    }
</div>
