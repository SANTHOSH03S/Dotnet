@model mvc.Models.Employee

@{
    ViewBag.Title = "Add Employee";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/assets/css/style.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Add Employee</h5>

                            @using (Html.BeginForm("Create", "Employee", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group row mb-3">
                                    @Html.LabelFor(m => m.EmpId, new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.EmpId, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.EmpId)
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    @Html.LabelFor(m => m.EmpName, new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.EmpName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.EmpName)
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    @Html.LabelFor(m => m.EmpPhone, new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.EmpPhone, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.EmpPhone)
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    @Html.LabelFor(m => m.EmpDept, new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.EmpDept, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.EmpDept)
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    @Html.LabelFor(m => m.Number, new { @class = "col-sm-2 col-form-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Number)
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    <div class="col-sm-10">
                                        <center>
                                            <button type="submit" class="btn btn-primary">Submit Form</button>
                                            @Html.ActionLink("View Employee", "ViewEmployee", "Employee", new { @class = "btn btn-secondary" })
                                        </center>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
  
</body>
</html>
